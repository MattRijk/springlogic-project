<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="calendarBean" class="java.util.Calendar" factory-method="getInstance" />
	<bean class="com.natickweb.spring.BeanA" id="beanA">
		<constructor-arg ref="calendarBean"/>   
	</bean>
	
	<bean id="customFactory" class="com.natickweb.spring.CustomFactory"/>
	
	<bean class="com.natickweb.spring.BeanB"
		factory-bean="customFactory" factory-method="getBeanBInstance"
		id="beanB">
	</bean>
</beans>
